{{ if gt .TotalPages 1 }}
    {{ with $url := .BasePath }}
        {{ if ne $.SearchQuery "" }}
            {{ $url = (printf "%s/:%s" $.BasePath (escapeUrlPath $.SearchQuery)) }}
        {{ end }}
        <div class="search-pagination">
            {{ if gt $.PageIndex 0 }}
                <a title="{{ _ "Go to the first page" }}" href="{{ $url }}">
                    <i class="fa-solid fa-angles-left"></i>
                    <span class="sr-only">{{ _ "Go to the first page" }}</span>
                </a>
                <a title="{{ _ "Go to the previous page" }}"
                   href="{{ $url }}/{{ $.NumPerPage }}/{{ sub $.PageIndex 1 }}">
                    <i class="fa-solid fa-angle-left"></i>
                    <span class="sr-only">{{ _ "Go to the previous page" }}</span>
                </a>
            {{ else }}
                <div><i class="fa-solid fa-angles-left"></i></div>
                <div><i class="fa-solid fa-angle-left"></i></div>
            {{ end }}
            <label for="pagination--jumps--toggle" class="search-pagination-info" title="{{ _ "show/hide page links" }}">
                <span class="search-pagination-info--pages">
                    {{ _ "Page %[1]d of %[2]d" $.PageNumber $.TotalPages }}
                </span>
                <span class="search-pagination-info--hits">
                {{- if ne $.StartItem $.EndItem -}}
                    {{ _ "Showing #%[1]d-%[2]d of %[3]d" $.StartItem $.EndItem $.TotalItems }}
                {{- else -}}
                    {{ _ "Showing #%[1]d of %[3]d" $.StartItem $.TotalItems }}
                {{- end -}}
                </span>
            </label>
            {{ if lt $.PageIndex $.LastIndex }}
                <a title="{{ _ "Go to the next page" }}"
                   href="{{ $url }}/{{ $.NumPerPage }}/{{ add $.PageIndex 1 }}">
                    <i class="fa-solid fa-angle-right"></i>
                    <span class="sr-only">{{ _ "Go to the next page" }}</span>
                </a>
                <a title="{{ _ "Go to the last page" }}"
                   href="{{ $url }}/{{ $.NumPerPage }}/{{ $.LastIndex }}">
                    <i class="fa-solid fa-angles-right"></i>
                    <span class="sr-only">{{ _ "Go to the last page" }}</span>
                </a>
            {{ else }}
                <div><i class="fa-solid fa-angle-right"></i></div>
                <div><i class="fa-solid fa-angles-right"></i></div>
            {{ end }}
        </div>
        <input id="pagination--jumps--toggle" type="checkbox" style="display:none;" />
        <label for="pagination--jumps--toggle" class="show--pagination--jumps" title="{{ _ "show page links" }}">
            <i class="fa-solid fa-chevron-down"></i>
        </label>
        <label for="pagination--jumps--toggle" class="hide--pagination--jumps" title="{{ _ "hide page links" }}">
            <i class="fa-solid fa-chevron-up"></i>
        </label>
        <div class="pagination--jumps">
            {{ with $numSplit := 1 }}
                {{ if lt $.TotalPages 20 }}
                    {{ $numSplit = 1 }}
                {{ else if lt $.TotalPages 50 }}
                    {{ $numSplit = 5 }}
                {{ else }}
                    {{ $numSplit = 10 }}
                {{ end }}
            <ul>
                {{ range $idx,$jumpToIndex := iterate -1 $numSplit $.TotalPages }}
                    {{ if or (le $jumpToIndex 0) (ge $jumpToIndex (sub $.TotalPages 1)) }}{{ continue }}{{ end }}
                    {{ $jumpToPage := add $jumpToIndex 1 }}
                    <li><a href="{{ $url }}/{{ $.NumPerPage }}/{{ $jumpToIndex }}" title="{{ _ "go to page %[1]d" $jumpToPage }}">{{ $jumpToPage }}</a></li>
                {{ end }}
            </ul>
            {{ end }}
        </div>
    {{ end }}
{{ end }}